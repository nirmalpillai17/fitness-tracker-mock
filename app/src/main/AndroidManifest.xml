<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.googlefitapp">

    <!-- Required permissions -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.GoogleFitApp"
        android:usesCleartextTraffic="true"
        android:label="Google Fit Step Writer">

        <!-- Metadata for Google Fit API -->
        <meta-data
            android:name="com.google.android.gms.fitness.app_permissions"
            android:resource="@xml/google_fit_permissions" />

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
